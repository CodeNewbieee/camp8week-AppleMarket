<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/iv_list"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/shape_radius16"
        android:clipToOutline="true"
        android:src="@drawable/sample1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="산지 한달된 컴퓨터 팝니다"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/iv_list"
        app:layout_constraintTop_toTopOf="@+id/iv_list" />

    <TextView
        android:id="@+id/tv_list_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="서울 서대문구 장천동"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/iv_list"
        app:layout_constraintTop_toBottomOf="@+id/tv_list_title" />

    <TextView
        android:id="@+id/tv_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="1,000원"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_list"
        app:layout_constraintTop_toBottomOf="@+id/tv_list_location" />

    <ImageView
        android:id="@+id/iv_list_chat"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/chat"
        app:layout_constraintEnd_toStartOf="@+id/tv_list_chat"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/tv_list_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_list_chat"
        app:layout_constraintTop_toTopOf="@+id/tv_list_chat"/>

    <TextView
        android:id="@+id/tv_list_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toStartOf="@+id/iv_list_heart"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_list_chat"
        app:layout_constraintBottom_toBottomOf="@+id/iv_list_heart"
        app:layout_constraintTop_toTopOf="@+id/iv_list_heart"/>

    <ImageView
        android:id="@+id/iv_list_heart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/heart"
        android:layout_marginStart="5dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_list_heart"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_list_chat"
        app:layout_constraintBottom_toBottomOf="@+id/tv_list_heart"
        app:layout_constraintTop_toTopOf="@+id/tv_list_heart"/>

    <TextView
        android:id="@+id/tv_list_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_list_heart"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>